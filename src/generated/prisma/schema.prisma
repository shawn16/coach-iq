generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model (for coaches)
model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String? // Assuming password-based auth for now
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  athletes     Athlete[] // Relation to athletes managed by this coach
}

// Athlete model
model Athlete {
  id             String          @id @default(cuid())
  firstName      String
  lastName       String
  dateOfBirth    DateTime?
  gradeLevel     Int?
  coachId        String // Foreign key to User (Coach)
  coach          User            @relation(fields: [coachId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  // Add fields for PRs, projected times etc. later
  workoutResults WorkoutResult[] // Relation to workout results
  // trainingPlans TrainingPlan[] // Relation to assigned training plans (if needed directly)
}

// Training Plan model (Simplified for now)
model TrainingPlan {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  // Add fields for phases, workouts, assignments later
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Workout Result model (Simplified for now)
model WorkoutResult {
  id        String   @id @default(cuid())
  athleteId String // Foreign key to Athlete
  athlete   Athlete  @relation(fields: [athleteId], references: [id])
  date      DateTime
  type      String // e.g., "Interval", "Tempo", "Long Run"
  details   Json // Flexible field for workout-specific data (distance, reps, pace, etc.)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
